<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Light"
        tools:targetApi="31">

        <!-- Firebase Metadata -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/notification_color" />
        <meta-data
            android:name="com.google.firebase.analytics.collection_enabled"
            android:value="true" />

        <!-- SplashScreen -->
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <!-- Register Activity -->
        <activity
            android:name=".Register"
            android:theme="@style/Theme.Material3.Light.NoActionBar"
            android:exported="false" />

        <!-- Login Activity -->
        <activity
            android:name=".Login"
            android:theme="@style/Theme.Material3.Light.NoActionBar"
            android:exported="false"
            android:label="@string/login" />

        <!-- Calculator Activity -->
        <activity
            android:name=".Calculator"
            android:theme="@style/Theme.Material3.Light.NoActionBar"
            android:exported="true" />

        <!-- AdminDashboard Activity -->
        <activity
            android:name=".AdminDashboard"
            android:theme="@style/Theme.Material3.Light.NoActionBar"
            android:exported="false" />

        <!-- CreateUserActivity -->
        <activity
            android:name=".CreateUserActivity"
            android:theme="@style/Theme.Material3.Light.NoActionBar"
            android:exported="false" />

        <!-- ExpenseHistoryActivity -->
        <activity
            android:name=".ExpenseHistoryActivity"
            android:theme="@style/Theme.Material3.Light.NoActionBar"
            android:exported="false" />

        <!-- AddExpenseActivity -->
        <activity
            android:name=".AddExpenseActivity"
            android:theme="@style/Theme.Material3.Light.NoActionBar"
            android:exported="false" />

        <!-- ExpenseSummaryActivity -->
        <activity
            android:name=".ExpenseSummaryActivity"
            android:theme="@style/Theme.Material3.Light.NoActionBar"
            android:exported="false" />

        <!-- BudgetActivity -->
        <activity
            android:name=".BudgetActivity"
            android:theme="@style/Theme.Material3.Light.NoActionBar"
            android:exported="true" />
    </application>
</manifest>

